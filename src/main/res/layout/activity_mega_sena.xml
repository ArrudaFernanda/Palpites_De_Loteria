<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/bkgdMegaSena"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.MegaSena">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rl2"
                        android:layout_marginTop="4dp"
                        android:layout_centerHorizontal="true">

            <ImageView android:layout_width="60dp"
                       android:layout_height="60dp"
                       android:id="@+id/trevomegasena"
                       android:background="@drawable/trevomegasena"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="60dp"
                      android:id="@+id/txtMegasena"
                      android:text="@string/strMegaSena"
                      android:fontFamily="sans-serif-black"
                      android:textStyle="italic"
                      android:textSize="40sp"
                      android:textColor="@color/txtColorPadrao"
                      android:textAlignment="center"
                      android:gravity="center"
                      android:background="@color/colorMegaSena"
                      android:layout_toEndOf="@+id/trevomegasena"
                      android:layout_toRightOf="@+id/trevomegasena"/>

        </RelativeLayout>

        <androidx.appcompat.widget.SwitchCompat
                android:text="EstatÃ­stica  "
                android:textSize="@dimen/txtSwitch"
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"
                app:showText="true"
                android:textOn="@string/strON"
                android:textOff="@string/strOFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchMegaSena"
                android:layout_below="@+id/rl2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="10dp"/>

        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rl3"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/rl2"
                        android:layout_marginTop="100dp">

            <TextView
                    android:text=""
                    android:textColor="@color/txtBolas"
                    android:fontFamily="sans-serif-black"
                    android:textSize="@dimen/txtSizeBolas"
                    android:gravity="center"
                    android:layout_width="@dimen/imgBola_hw"
                    android:layout_height="@dimen/imgBola_hw"
                    android:background="@drawable/bola_a"
                    android:id="@+id/view1_m"/>

            <TextView
                    android:text=""
                    android:textColor="@color/txtBolas"
                    android:fontFamily="sans-serif-black"
                    android:textSize="@dimen/txtSizeBolas"
                    android:gravity="center"
                    android:layout_width="@dimen/imgBola_hw"
                    android:layout_height="@dimen/imgBola_hw"
                    android:background="@drawable/bola_b"
                    android:id="@+id/view2_m"
                    android:layout_toEndOf="@+id/view1_m"
                    android:layout_toRightOf="@+id/view1_m"/>

            <TextView
                    android:text=""
                    android:textColor="@color/txtBolas"
                    android:fontFamily="sans-serif-black"
                    android:textSize="@dimen/txtSizeBolas"
                    android:gravity="center"
                    android:layout_width="@dimen/imgBola_hw"
                    android:layout_height="@dimen/imgBola_hw"
                    android:background="@drawable/bola_j"
                    android:id="@+id/view3_m"
                    android:layout_toEndOf="@+id/view2_m"
                    android:layout_toRightOf="@+id/view2_m"/>

            <TextView
                    android:text=""
                    android:textColor="@color/txtBolas"
                    android:fontFamily="sans-serif-black"
                    android:textSize="@dimen/txtSizeBolas"
                    android:gravity="center"
                    android:layout_width="@dimen/imgBola_hw"
                    android:layout_height="@dimen/imgBola_hw"
                    android:background="@drawable/bola_i"
                    android:id="@+id/view4_m"
                    android:layout_below="@id/view1_m"/>

            <TextView
                    android:text=""
                    android:textColor="@color/txtBolas"
                    android:fontFamily="sans-serif-black"
                    android:textSize="@dimen/txtSizeBolas"
                    android:gravity="center"
                    android:layout_width="@dimen/imgBola_hw"
                    android:layout_height="@dimen/imgBola_hw"
                    android:background="@drawable/bola_h"
                    android:id="@+id/view5_m"
                    android:layout_below="@+id/view2_m"
                    android:layout_toEndOf="@+id/view4_m"
                    android:layout_toRightOf="@+id/view4_m"/>

            <TextView
                    android:text=""
                    android:textColor="@color/txtBolas"
                    android:fontFamily="sans-serif-black"
                    android:textSize="@dimen/txtSizeBolas"
                    android:gravity="center"
                    android:layout_width="@dimen/imgBola_hw"
                    android:layout_height="@dimen/imgBola_hw"
                    android:background="@drawable/bola_d"
                    android:id="@+id/view6_m"
                    android:layout_below="@+id/view3_m"
                    android:layout_toEndOf="@+id/view5_m"
                    android:layout_toRightOf="@+id/view5_m"/>

        </RelativeLayout>

        <Button android:layout_width="@dimen/btnGerar_w"
                android:layout_height="wrap_content"
                android:id="@+id/btnMegGerar"
                android:text="@string/strBtnGerar"
                android:textColor="@color/txtColorPadrao"
                android:background="@drawable/btncorner"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_below="@+id/rl3"
                android:layout_marginTop="44dp"
                android:layout_centerHorizontal="true"/>

        <Button
                android:text="@string/strBtnCopy"
                android:textColor="@color/txtColorPadrao"
                android:background="@drawable/btncorner"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCopMega"
                android:layout_below="@+id/rl3"
                android:layout_marginTop="44dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/btnMegGerar"
                android:layout_toEndOf="@id/btnMegGerar"
                android:layout_marginStart="10dp"/>

    </RelativeLayout>

    <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/adViewMegaSena"
            ads:adSize="MEDIUM_RECTANGLE"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="2dp">
    </com.google.android.gms.ads.AdView>

</androidx.constraintlayout.widget.ConstraintLayout>